<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
            <Label Text="Calculadora" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Ingrese Numero 1" TextColor="Black" HorizontalTextAlignment="Center"/>
        <Entry x:Name="N1" HorizontalTextAlignment="Center" />
        <Label Text="Ingrese Numero 2" TextColor="Black" HorizontalTextAlignment="Center"/>
        <Entry x:Name="N2"  HorizontalTextAlignment="Center"/>
        <Label x:Name="Rst" HorizontalTextAlignment="Center" />

        <Button TextColor="#37ae9a" FontSize="25" VerticalOptions="Fill" Text="+" BackgroundColor="#282b33" Clicked="Btn_Suma"/>
        <Button TextColor="#37ae9a" Padding="6,0,0,4" FontSize="38" VerticalOptions="Fill" Text="-" BackgroundColor="#282b33" Clicked="Btn_Resta"/>
        <Button TextColor="#37ae9a" Padding="6,0,0,4" FontSize="38" VerticalOptions="Fill" Text="x" BackgroundColor="#282b33" Clicked="Btn_Multiplicar"/>
        <Button TextColor="#37ae9a" Padding="6,0,0,4" FontSize="38" VerticalOptions="Fill" Text="÷" BackgroundColor="#282b33" Clicked="Btn_Dividir"/>
        

        
    </StackLayout>

</ContentPage>
